<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="1100.0" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BusinessLogic.Controllers.VerificacionCodigoController">
    <children>
        <Label text="Ingrese el código de verificación:" />
        <TextField fx:id="txtCodigoVerificacion" />
        <Button fx:id="btnVerificarCodigo" onAction="#verificarCodigo" text="Verificar Código" />
        <Label fx:id="lblIntentosRestantes" />
      <Button fx:id="regresar" mnemonicParsing="false" onAction="#regresarLongIn" text="Back" />
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
